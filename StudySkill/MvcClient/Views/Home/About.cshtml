@using Microsoft.AspNetCore.Authentication;

<h2>About</h2>

<dl>
    @foreach (var claim in User.Claims)
    {
        <dt>@claim.Type</dt>
        <dt>@claim.Value</dt>
    }
    <dt>Access Token</dt>
    <dt>@await ViewContext.HttpContext.GetTokenAsync("access_token") </dt>


    <dt>Refresh Token</dt>
    <dt>@await ViewContext.HttpContext.GetTokenAsync("refresh_token")</dt>


    <dt>Id Token</dt>
    <dt>@await ViewContext.HttpContext.GetTokenAsync("id_token") </dt>
</dl>

